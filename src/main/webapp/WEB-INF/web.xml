<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">

    <servlet>
        <servlet-name>Word Attack Webapp</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>net.capps.word</param-value>
        </init-param>
<!--        <init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>net.capps.word.servlet.ErrorHandlingProvider</param-value>
        </init-param>-->
<!--        <init-param>
            <param-name>jersey.config.server.exception.processResponseErrors</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>jersey.config.beanValidation.enableOutputValidationErrorEntity.server</param-name>
            <param-value>true</param-value>
        </init-param>-->
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Word Attack Webapp</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>net.capps.word.servlet.WordServletContextListener</listener-class>
    </listener>
</web-app>
